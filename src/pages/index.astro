---
import Layout from '../layouts/Layout.astro';
import { members } from '../data/members.json';
import { projects } from '../data/projects.json';
---

<Layout title="JAM-Productions">
	<main>
		<section class="hero">
			<h1>JAM-Productions</h1>
			<p class="subtitle">Building the future of web development</p>
			<div class="cta-buttons">
				<a href="#projects" class="cta-button">View Projects</a>
				<a href="/blog" class="cta-button secondary">Read Our Blog</a>
			</div>
		</section>

		<section class="projects" id="projects">
			<h2>Our Projects</h2>
			<div class="project-grid">
				{projects.map((project) => (
					<div class="project-card">
						<div class="project-image" style={`background-image: url(${project.image})`}></div>
						<div class="project-content">
							<h3>{project.title}</h3>
							<p>{project.description}</p>
							<div class="tech-stack">
								{project.technologies.map((tech) => (
									<span class="tech-tag">{tech}</span>
								))}
							</div>
							<div class="project-links">
								<a href={project.github} target="_blank" rel="noopener noreferrer">GitHub</a>
								<a href={project.live} target="_blank" rel="noopener noreferrer">Live Demo</a>
							</div>
						</div>
					</div>
				))}
			</div>
		</section>

		<section class="team" id="team">
			<h2>Our Team</h2>
			<div class="team-grid">
				{members.map((member) => (
					<div class="member-card">
						<img src={member.avatar} alt={member.name} class="member-avatar" />
						<h3>{member.name}</h3>
						<p class="role">{member.role}</p>
						<p class="bio">{member.bio}</p>
						<div class="skills">
							{member.skills.map((skill) => (
								<span class="skill-tag">{skill}</span>
							))}
						</div>
						<div class="social-links">
							<a href={member.github} target="_blank" rel="noopener noreferrer">GitHub</a>
							<a href={member.linkedin} target="_blank" rel="noopener noreferrer">LinkedIn</a>
						</div>
					</div>
				))}
			</div>
		</section>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 1200px;
		max-width: calc(100% - 2rem);
		color: white;
		margin-top: 4rem;
	}

	.hero {
		text-align: center;
		padding: 6rem 2rem;
		background: linear-gradient(rgba(var(--accent-dark), 0.3), transparent);
		border-radius: 1rem;
		margin: 2rem 0;
	}

	.subtitle {
		font-size: clamp(1.1rem, 3vw, 1.5rem);
		color: rgb(var(--accent-light));
		margin-bottom: 2rem;
	}

	.cta-buttons {
		display: flex;
		gap: 1rem;
		justify-content: center;
		flex-wrap: wrap;
	}

	.cta-button {
		background: rgb(var(--accent));
		color: white;
		padding: 0.8rem 2rem;
		border-radius: 999px;
		text-decoration: none;
		transition: all 0.3s;
		font-weight: 500;
		white-space: nowrap;
	}

	.cta-button.secondary {
		background: transparent;
		border: 2px solid rgb(var(--accent));
	}

	.cta-button:hover {
		transform: translateY(-2px);
		box-shadow: 0 4px 12px rgba(var(--accent), 0.25);
	}

	h1 {
		font-size: clamp(2.5rem, 8vw, 4rem);
		font-weight: 700;
		line-height: 1.1;
		margin-bottom: 1rem;
		background: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.project-grid, .team-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(min(100%, 350px), 1fr));
		gap: 1rem;
		padding: 1rem 0;
	}

	.project-card, .member-card {
		background: rgba(255, 255, 255, 0.05);
		border-radius: 1rem;
		overflow: hidden;
		transition: transform 0.3s, box-shadow 0.3s;
		border: 1px solid rgba(255, 255, 255, 0.1);
		display: flex;
		flex-direction: column;
	}

	.project-card:hover, .member-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 4px 20px rgba(var(--accent), 0.2);
	}

	.project-image {
		height: 200px;
		background-size: cover;
		background-position: center;
	}

	.project-content {
		padding: 1.5rem;
		flex-grow: 1;
		display: flex;
		flex-direction: column;
	}

	.tech-tag, .skill-tag {
		background: rgba(var(--accent), 0.2);
		color: rgb(var(--accent-light));
		padding: 0.2rem 0.8rem;
		border-radius: 999px;
		font-size: 0.8rem;
		margin-right: 0.5rem;
		margin-bottom: 0.5rem;
		display: inline-block;
	}

	.project-links, .social-links {
		margin-top: 2rem;
		padding-top: 1rem;
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.project-links a, .social-links a {
		color: rgb(var(--accent-light));
		text-decoration: none;
		font-size: 0.9rem;
	}

	.project-links a:hover, .social-links a:hover {
		text-decoration: underline;
	}

	.member-avatar {
		width: 120px;
		height: 120px;
		border-radius: 50%;
		margin: 0 auto;
		border: 4px solid rgb(var(--accent));
		object-fit: cover;
	}

	.member-card {
		text-align: center;
		padding: 4rem 1.5rem 1.5rem;
		margin-top: 3rem;
	}

	.role {
		color: rgb(var(--accent-light));
		font-size: 0.9rem;
		margin-bottom: 1rem;
	}

	.bio {
		color: #888;
		margin-bottom: 1rem;
	}

	section {
		margin: 6rem 0;x
		scroll-margin-top: 5rem;
	}

	h2 {
		font-size: clamp(2rem, 5vw, 2.5rem);
		margin-bottom: 2rem;
		text-align: center;
		background: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	h3 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}

	@media (max-width: 768px) {
		.hero {
			padding: 4rem 1rem;
		}

		section {
			margin: 4rem 0;
		}

		.project-grid, .team-grid {
			grid-template-columns: 1fr;
		}

		.member-card {
			margin-top: 4rem;
		}
	}

	@media (max-width: 480px) {
		.cta-buttons {
			flex-direction: column;
			align-items: stretch;
		}

		.cta-button {
			text-align: center;
		}
	}
</style>
